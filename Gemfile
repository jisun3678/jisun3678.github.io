source 'https://rubygems.org'

gem 'bundler'
gem 'jekyll'
gem 'jekyll-sitemap'
gem 'jekyll-seo-tag'        # SEO 플러그인
gem 'jekyll-theme-primer'   # 테마 지정
gem 'webrick', '~> 1.7'     # Jekyll 4.x 이상에서 필요한 서버 의존성
gem 'wdm', '>= 0.1.0'       # Windows 사용자용 파일 변경 감지

# 추가로 필요한 플러그인 예시
gem 'jekyll-paginate'       # 페이지 네비게이션
gem 'jekyll-gist'           # GitHub Gist 통합
gem 'jekyll-github-metadata' # GitHub Pages 환경 메타데이터
